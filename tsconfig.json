    "include": ["src/**/*.ts", "models/objects.json", "src/three/cameras/CubeCamera.js", "src/three/cameras/Camera.js", "src/three/cameras/ArrayCamera.js", "src/three/constants.js", "src/three/Utils.js", "src/three/scene.js"],
    "exclude": ["node_modules"]
}