{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "incremental": true,
      "noEmitOnError": true,
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true
